{
  "name": "angularjs-build-with-npm-boilerplate",
  "version": "0.0.1",
  "scripts": {
    "lint": "standard",

    "build:clean": "node ./node_modules/rimraf/bin.js public/* build/*",
    "build:templates": "node ./scripts/build-templates.js && cp src/index.html public/ && mkdir -p public/scripts && cp build/templates.bundle.js public/scripts/templates.js",
    "build:scripts": "mkdir -p public/scripts && node ./node_modules/browserify/bin/cmd.js src/app.js -o public/scripts/app.js",
    "build": "npm run lint && npm run build:clean && npm run build:templates && npm run build:scripts",

    "watch:scripts": "onchange 'src/**/*.js' -v -- npm run build:scripts",
    "watch": "parallelshell 'npm run watch:scripts'",

    "start": "npm run build && parallelshell 'node server.js' 'npm run watch'"
  },
  "devDependencies": {},
  "dependencies": {
    "angular": "^1.5.8",
    "angular-ui-router": "^0.3.1",
    "browserify": "^13.1.0",
    "finalhandler": "^0.5.0",
    "glob-all": "^3.1.0",
    "ng-html2js": "^3.0.0",
    "onchange": "^3.0.2",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.4",
    "serve-static": "^1.11.1",
    "standard": "^8.3.0"
  },
  "standard": {
    "ignore": [
      "/build",
      "/public"
    ]
  }
}
